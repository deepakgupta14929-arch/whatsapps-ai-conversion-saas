<div class="max-w-md mx-auto bg-slate-900/70 border border-slate-800 rounded-2xl p-6">
  <h1 class="text-xl font-bold mb-4 text-center">Log in</h1>

  <% if (error) { %>
    <p class="text-xs text-red-400 mb-3"><%= error %></p>
  <% } %>

  <form class="space-y-4" method="POST" action="/login">
    <div>
      <label class="text-xs text-slate-400 mb-1 block">Email</label>
      <input
        type="email"
        name="email"
        class="w-full bg-slate-950 border border-slate-700 rounded-xl px-3 py-2 text-sm"
        required
      />
    </div>
    <div>
      <label class="text-xs text-slate-400 mb-1 block">Password</label>
      <input
        type="password"
        name="password"
        class="w-full bg-slate-950 border border-slate-700 rounded-xl px-3 py-2 text-sm"
        required
      />
    </div>
    <button class="w-full bg-emerald-500 hover:bg-emerald-400 text-slate-900 font-semibold text-sm py-2 rounded-xl">
      Log in
    </button>
  </form>

  <p class="text-xs text-slate-400 mt-4 text-center">
    Don't have an account?
    <a href="/signup" class="text-emerald-400 hover:text-emerald-300">Sign up</a>
  </p>
</div>

